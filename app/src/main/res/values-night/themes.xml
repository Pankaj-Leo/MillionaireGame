<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="WinningText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorWinning</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LosingText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorLosing</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>